// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  authors  Authors[]
}

model Authors {
  id         Int     @id @default(autoincrement())
  name       String
  books      Books[]
  createBy   Users?  @relation(fields: [createById], references: [id])
  createById Int?
}

model Books {
  id       Int      @id @default(autoincrement())
  title    String
  author   Authors? @relation(fields: [authorId], references: [id])
  authorId Int?
}
